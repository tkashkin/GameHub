{
	"name": "libs",
	"buildsystem": "simple",
	"sources": [
		{
			"type": "file",
			"path": "ld.so.conf"
		}
	],
	"build-commands": [
		"mkdir -p /app/lib/32bit/lib/GL",
		"mkdir -p /app/lib/GL",
		"ln -s /app/lib/32bit/lib/ld-linux.so.2 /app/lib/ld-linux.so.2",
		"install -Dm644 ld.so.conf /app/etc/ld.so.conf"
	],

	"modules": [
		"shared/intltool/intltool-0.51.json",
		"valac.json",

		{
			"name": "libevdev",
			"sources": [
				{
					"type": "git",
					"url": "https://gitlab.freedesktop.org/libevdev/libevdev.git"
				}
			]
		},

		"manette.json",
		"file-roller.json"
	]
}
